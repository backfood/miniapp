page {
  height: 100%;
}

.item {
  margin: 0 10rpx;
}


.input {
  border: 1rpx solid #333333;
  margin: 20rxp 10rpx;
  padding-left: 10rpx;
}


.flex {
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button {
  border: 1rpx solid #e5e5e5;
  width: 300rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.focusform {
  margin: 0 10rpx;
  height: 100%;
}

.item {
  display: flex;
  align-items: center;
}

.label {
  /* border: 1rpx solid #333333; */
